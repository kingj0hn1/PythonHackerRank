def is_leap(year):
    leap = False
    
    # Write your logic here
    if year%4 ==0:
        if year%100 ==0:
            if year%400==0:
                return not leap
            else: 
                return leap
        else: 
            return leap        
    else:
        return leap
            
    
    return leap


OR

def is_leap(year):
    leap = False
    
    # Write your logic here
    return (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0)
            
    
    return leap

